{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-key"></i> Changer le mot de passe
                    </h4>
                </div>
                <div class="card-body">
                    {% for flash_error in app.flashes('error') %}
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> {{ flash_error }}
                        </div>
                    {% endfor %}

                    {% for flash_success in app.flashes('success') %}
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> {{ flash_success }}
                        </div>
                    {% endfor %}

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.currentPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control', 'placeholder': 'Votre mot de passe actuel'}}) }}
                            </div>
                            {{ form_errors(form.currentPassword) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Votre nouveau mot de passe'}}) }}
                            </div>
                            {{ form_errors(form.newPassword.first) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmez votre nouveau mot de passe'}}) }}
                            </div>
                            {{ form_errors(form.newPassword.second) }}
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <small>Le mot de passe doit contenir au moins 6 caractères.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Modifier le mot de passe
                            </button>
                            <a href="{{ path('app_account') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Lien vers l'édition du profil -->
            <div class="text-center mt-3">
                <a href="{{ path('app_account_edit') }}" class="btn btn-outline-primary">
                    <i class="fas fa-user-edit"></i> Modifier mon profil
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
