        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2">üëã Bienvenue sur votre Dashboard</h1>
                <p class="mb-0">G√©rez vos cours, suivez vos √©tudiants et analysez vos performances.</p>
            </div>
            <div class="col-md-4 text-md-end">
                <div class="action-buttons">
                    <a href="{{ path('app_cours_new') }}" class="btn btn-light btn-custom">
                        <i class="fas fa-plus"></i> Nouveau Cours
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques -->
    <div class="row mb-3">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card">
                <div class="stat-number">{{ stats.totalCours ?? 0 }}</div>
                <div class="stat-label">üìö Cours Total</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card success">
                <div class="stat-number">{{ stats.totalModules ?? 0 }}</div>
                <div class="stat-label">üì¶ Modules</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card warning">
                <div class="stat-number">{{ stats.totalChapitres ?? 0 }}</div>
                <div class="stat-label">üìñ Chapitres</div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="stat-card info">
                <div class="stat-number">{{ stats.totalEtudiants ?? 0 }}</div>
                <div class="stat-label">üë®‚Äçüéì √âtudiants</div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Cours r√©cents -->
        <div class="col-lg-8">
            <div class="card dashboard-card">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">üìö Mes Cours</h5>
                    {% if totalCours > 5 %}
                        <a href="{{ path('enseignant_cours') }}" class="btn btn-sm btn-outline-primary">
                            Voir tous ({{ totalCours }})
                        </a>
                    {% endif %}
                </div>
                <div class="card-body">
                    {% if cours|length > 0 %}
                        <div class="row">
                            {% for c in cours %}
                                <div class="col-md-6 mb-3">
                                    <div class="course-card card">
                                        <div class="card-body p-3">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="card-title mb-0">{{ c.titre }}</h6>
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                        <i class="fas fa-ellipsis-v"></i>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" href="{{ path('app_cours_show', {id: c.id}) }}"><i class="fas fa-eye me-2"></i>Voir</a></li>
                                                        <li><a class="dropdown-item" href="{{ path('app_cours_edit', {id: c.id}) }}"><i class="fas fa-edit me-2"></i>Modifier</a></li>
                                                        <li><a class="dropdown-item" href="{{ path('app_module_new', {id: c.id}) }}"><i class="fas fa-plus me-2"></i>Ajouter module</a></li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li><a class="dropdown-item text-danger" href="#" onclick="confirmDelete({{ c.id }})"><i class="fas fa-trash me-2"></i>Supprimer</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <p class="card-text text-muted small mb-2">{{ c.description|slice(0, 80) }}...</p>
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <small class="text-muted">
                                                    <i class="fas fa-layer-group me-1"></i>{{ c.modules|length }} module(s)
                                                </small>
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar me-1"></i>{{ c.createdAt ? c.createdAt.format('d/m/Y') : 'N/A' }}
                                                </small>
                                            </div>
                                            <div class="progress" style="height: 6px;">
                                                <div class="progress-bar" role="progressbar" style="width: {{ random(30, 90) }}%"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        {% if totalCours > 5 %}
                            <div class="text-center mt-3">
                                <a href="{{ path('enseignant_cours') }}" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-plus"></i> Voir {{ totalCours - 5 }} cours de plus
                                </a>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="text-center py-4">
                            <div class="mb-3">
                                <i class="fas fa-book-open fa-3x text-muted"></i>
                            </div>
                            <h6 class="text-muted">Aucun cours cr√©√©</h6>
                            <p class="text-muted small mb-3">Commencez par cr√©er votre premier cours pour voir appara√Ætre vos statistiques.</p>
                            <a href="{{ path('app_cours_new') }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> Cr√©er mon premier cours
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Activit√© r√©cente et graphiques -->
        <div class="col-lg-4">
            <!-- Activit√© r√©cente -->
            <div class="card dashboard-card mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">üîî Activit√© R√©cente</h5>
                </div>
                <div class="card-body">
                    {% if activiteRecente|length > 0 %}
                        {% for activite in activiteRecente %}
                            <div class="activity-item">
                                <div class="d-flex align-items-center">
                                    <span class="me-2">{{ activite.icon }}</span>
                                    <div>
                                        <div class="fw-bold">{{ activite.message }}</div>
                                        <small class="text-muted">{{ activite.date.format('d/m/Y H:i') }}</small>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-center py-3">
                            <i class="fas fa-bell-slash fa-2x text-muted"></i>
                            <p class="text-muted mt-2">Aucune activit√© r√©cente</p>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Graphique des performances -->
            <div class="card dashboard-card">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">üìä Performances</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="performanceChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions rapides -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card dashboard-card">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">‚ö° Actions Rapides</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="{{ path('app_cours_new') }}" class="btn btn-outline-primary btn-custom w-100">
                                <i class="fas fa-plus-circle"></i><br>
                                Cr√©er un Cours
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="{{ path('enseignant_cours') }}" class="btn btn-outline-success btn-custom w-100">
                                <i class="fas fa-list"></i><br>
                                G√©rer les Cours
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="#" class="btn btn-outline-warning btn-custom w-100">
                                <i class="fas fa-chart-line"></i><br>
                                Statistiques
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="#" class="btn btn-outline-info btn-custom w-100">
                                <i class="fas fa-cog"></i><br>
                                Param√®tres
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                √ätes-vous s√ªr de vouloir supprimer ce cours ? Cette action est irr√©versible.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" id="confirmDeleteBtn" class="btn btn-danger">Supprimer</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script>
        // Graphique des performances
        const ctx = document.getElementById('performanceChart').getContext('2d');
        
        // Donn√©es du graphique
        const coursData = {{ stats.totalCours ?? 0 }};
        const modulesData = {{ stats.totalModules ?? 0 }};
        const chapitresData = {{ stats.totalChapitres ?? 0 }};
        
        // V√©rifier si nous avons des donn√©es
        if (coursData === 0 && modulesData === 0 && chapitresData === 0) {
            // Afficher un message si aucune donn√©e
            document.getElementById('performanceChart').parentElement.innerHTML = 
                '<div class="text-center py-4">' +
                '<i class="fas fa-chart-pie fa-3x text-muted mb-3"></i>' +
                '<p class="text-muted">Aucune donn√©e disponible</p>' +
                '<p class="text-muted small">Cr√©ez des cours pour voir vos statistiques</p>' +
                '</div>';
        } else {
            const performanceChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Cours', 'Modules', 'Chapitres'],
                    datasets: [{
                        data: [coursData, modulesData, chapitresData],
                        backgroundColor: [
                            '#667eea',
                            '#38ef7d',
                            '#f5576c'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                usePointStyle: true,
                                font: {
                                    size: 12
                                }
                            }
                        }
                    }
                }
            });
        }

        // Fonction de confirmation de suppression
        function confirmDelete(coursId) {
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            document.getElementById('confirmDeleteBtn').onclick = function() {
                // Cr√©er un formulaire pour envoyer la requ√™te POST avec token CSRF
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/cours/' + coursId + '/delete';
                
                const csrfToken = document.createElement('input');
                csrfToken.type = 'hidden';
                csrfToken.name = '_token';
                csrfToken.value = '{{ csrf_token("delete") }}';
                form.appendChild(csrfToken);
                
                document.body.appendChild(form);
                form.submit();
            };
            modal.show();
        }

        // Animation des cartes au scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.dashboard-card').forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = 'all 0.6s ease';
            observer.observe(card);
        });
    </script>
{% endblock %}
