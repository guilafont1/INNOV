                    <h5 class="section-title mb-0">‚úÖ √âtudiants de la classe ({{ classe.etudiants|length }})</h5>
                </div>
                <div class="card-body">
                    {% if classe.etudiants|length > 0 %}
                        {% for etudiant in classe.etudiants %}
                            <div class="student-card card">
                                <div class="card-body p-3">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <div class="d-flex align-items-center">
                                                <div class="student-avatar">
                                                    {{ etudiant.prenom|first }}{{ etudiant.nom|first }}
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">{{ etudiant.prenom }} {{ etudiant.nom }}</h6>
                                                    <small class="text-muted">{{ etudiant.email }}</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 text-md-end">
                                            <form method="post" style="display: inline;">
                                                <input type="hidden" name="action" value="remove">
                                                <input type="hidden" name="etudiant_id" value="{{ etudiant.id }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger btn-custom" 
                                                        onclick="return confirm('√ätes-vous s√ªr de vouloir retirer cet √©tudiant de la classe ?')">
                                                    <i class="fas fa-user-minus"></i> Retirer
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="empty-state">
                            <i class="fas fa-user-slash"></i>
                            <h5>Aucun √©tudiant dans cette classe</h5>
                            <p>Ajoutez des √©tudiants √† partir de la liste disponible</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- √âtudiants disponibles -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="section-title mb-0">‚ûï √âtudiants disponibles ({{ etudiantsDisponibles|length }})</h5>
                </div>
                <div class="card-body">
                    {% if etudiantsDisponibles|length > 0 %}
                        {% for etudiant in etudiantsDisponibles %}
                            <div class="student-card card">
                                <div class="card-body p-3">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <div class="d-flex align-items-center">
                                                <div class="student-avatar">
                                                    {{ etudiant.prenom|first }}{{ etudiant.nom|first }}
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">{{ etudiant.prenom }} {{ etudiant.nom }}</h6>
                                                    <small class="text-muted">{{ etudiant.email }}</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 text-md-end">
                                            <form method="post" style="display: inline;">
                                                <input type="hidden" name="action" value="add">
                                                <input type="hidden" name="etudiant_id" value="{{ etudiant.id }}">
                                                <button type="submit" class="btn btn-sm btn-outline-success btn-custom">
                                                    <i class="fas fa-user-plus"></i> Ajouter
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="empty-state">
                            <i class="fas fa-user-check"></i>
                            <h5>Aucun √©tudiant disponible</h5>
                            <p>Tous les √©tudiants sont d√©j√† assign√©s √† cette classe</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üìä Statistiques</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="p-3">
                                <h3 class="text-primary">{{ classe.etudiants|length }}</h3>
                                <p class="text-muted mb-0">√âtudiants inscrits</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3">
                                <h3 class="text-success">{{ etudiantsDisponibles|length }}</h3>
                                <p class="text-muted mb-0">√âtudiants disponibles</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3">
                                <h3 class="text-info">{{ classe.cours|length }}</h3>
                                <p class="text-muted mb-0">Cours associ√©s</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
