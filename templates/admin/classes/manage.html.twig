                                                                    onclick="return confirm('Retirer ce professeur de la classe ?')">
                                                                <i class="fas fa-user-minus"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <div class="empty-state">
                                    <i class="fas fa-chalkboard-teacher"></i>
                                    <h5>Aucun professeur assign√©</h5>
                                    <p>Ajoutez des professeurs √† cette classe</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card admin-card">
                        <div class="card-header">
                            <h5 class="section-title mb-0">‚ûï Ajouter un Professeur</h5>
                        </div>
                        <div class="card-body">
