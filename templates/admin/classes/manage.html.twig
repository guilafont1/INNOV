                                                            <input type="hidden" name="course_id" value="{{ cours.id }}">
                                                            <button type="submit" class="btn btn-sm btn-outline-success">
                                                                <i class="fas fa-plus"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <div class="empty-state">
                                    <i class="fas fa-book-open"></i>
                                    <h5>Aucun cours disponible</h5>
