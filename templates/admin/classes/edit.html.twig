{% extends 'base.html.twig' %}

{% block title %}Édite                        <a href="{{ path('admin_classes_show', {id: classe.id}) }}" class="btn btn-info">
                            <i class="fas fa-eye"></i> Voir les détails
                        </a>a classe - JEAI Learn{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-edit"></i> Éditer la classe : {{ classe.nom }}</h4>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <div class="mb-3">
                            <label for="nom" class="form-label">Nom de la classe <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="nom" name="nom" value="{{ classe.nom }}" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="4">{{ classe.description }}</textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_classes') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Mettre à jour
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Informations sur la classe -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> Informations</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Créée le :</strong> {{ classe.createdAt|date('d/m/Y H:i') }}</p>
                            {% if classe.updatedAt %}
                                <p><strong>Dernière modification :</strong> {{ classe.updatedAt|date('d/m/Y H:i') }}</p>
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <p><strong>Étudiants :</strong> {{ classe.etudiants|length }}</p>
                            <p><strong>Professeurs :</strong> {{ classe.professeurs|length }}</p>
                            <p><strong>Cours :</strong> {{ classe.cours|length }}</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="{{ path('admin_classes_manage', {id: classe.id}) }}" class="btn btn-info">
                            <i class="fas fa-cogs"></i> Gérer cette classe
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
