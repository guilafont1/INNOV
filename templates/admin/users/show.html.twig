{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur {{ user.nom }} {{ user.prenom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-user"></i> Détails de l'utilisateur</h1>
                <div>
                    <a href="{{ path('admin_users') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title"><i class="fas fa-info-circle"></i> Informations personnelles</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Nom :</dt>
                                <dd class="col-sm-8">{{ user.nom }}</dd>
                                
                                <dt class="col-sm-4">Prénom :</dt>
                                <dd class="col-sm-8">{{ user.prenom }}</dd>
                                
                                <dt class="col-sm-4">Email :</dt>
                                <dd class="col-sm-8">{{ user.email }}</dd>
                                
                                <dt class="col-sm-4">Téléphone :</dt>
                                <dd class="col-sm-8">{{ user.telephone ? user.telephone : 'Non renseigné' }}</dd>
                                
                                <dt class="col-sm-4">Adresse :</dt>
                                <dd class="col-sm-8">{{ user.adresse ? user.adresse : 'Non renseignée' }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title"><i class="fas fa-shield-alt"></i> Informations du compte</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Rôles :</dt>
                                <dd class="col-sm-8">
                                    {% for role in user.roles %}
                                        {% if role == 'ROLE_ADMIN' %}
                                            <span class="badge bg-danger">{{ role }}</span>
                                        {% elseif role == 'ROLE_ENSEIGNANT' %}
                                            <span class="badge bg-warning">{{ role }}</span>
                                        {% elseif role == 'ROLE_ETUDIANT' %}
                                            <span class="badge bg-primary">{{ role }}</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ role }}</span>
                                        {% endif %}
                                    {% endfor %}
                                </dd>
                                
                                <dt class="col-sm-4">Statut :</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success">Actif</span>
                                </dd>
                                
                                <dt class="col-sm-4">Créé le :</dt>
                                <dd class="col-sm-8">{{ user.createdAt ? user.createdAt|date('d/m/Y à H:i') : 'Non disponible' }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            {% if 'ROLE_ETUDIANT' in user.roles and user.classe %}
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title"><i class="fas fa-graduation-cap"></i> Informations étudiant</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Classe :</dt>
                                <dd class="col-sm-9">
                                    <a href="{{ path('admin_classes_show', {id: user.classe.id}) }}" class="text-decoration-none">
                                        <span class="badge bg-info">{{ user.classe.nom }}</span>
                                    </a>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if 'ROLE_ENSEIGNANT' in user.roles and user.coursEnseignes and user.coursEnseignes|length > 0 %}
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title"><i class="fas fa-chalkboard-teacher"></i> Cours enseignés</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Titre</th>
                                            <th>Module</th>
                                            <th>Classe</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for cours in user.coursEnseignes %}
                                        <tr>
                                            <td>{{ cours.titre }}</td>
                                            <td>{{ cours.module ? cours.module.nom : 'Aucun module' }}</td>
                                            <td>{{ cours.classe ? cours.classe.nom : 'Aucune classe' }}</td>
                                            <td>
                                                <a href="{{ path('app_cours_show', {id: cours.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> Voir
                                                </a>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title"><i class="fas fa-tools"></i> Actions administratives</h5>
                        </div>
                        <div class="card-body">
                            <div class="btn-group" role="group">
                                {% if 'ROLE_ADMIN' not in user.roles %}
                                <form method="POST" action="{{ path('admin_users_toggle_role', {id: user.id}) }}" class="d-inline">
                                    <input type="hidden" name="role" value="ROLE_ADMIN">
                                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Êtes-vous sûr de vouloir donner les droits administrateur à cet utilisateur ?')">
                                        <i class="fas fa-user-shield"></i> Promouvoir Admin
                                    </button>
                                </form>
                                {% endif %}
                                
                                {% if 'ROLE_ENSEIGNANT' not in user.roles %}
                                <form method="POST" action="{{ path('admin_users_toggle_role', {id: user.id}) }}" class="d-inline">
                                    <input type="hidden" name="role" value="ROLE_ENSEIGNANT">
                                    <button type="submit" class="btn btn-outline-warning">
                                        <i class="fas fa-chalkboard-teacher"></i> Promouvoir Enseignant
                                    </button>
                                </form>
                                {% endif %}
                                
                                <form method="POST" action="{{ path('admin_users_delete', {id: user.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
